{
	"name": "bonapoly",
	"version": "0.1.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\""
	},
	"devDependencies": {
		"prettier": "^2.8.8",
		"turbo": "^1.9.8"
	},
	"engines": {
		"pnpm": ">=8.4.0",
		"node": ">=18.16.0"
	},
	"packageManager": "pnpm@8.5.1"
}
